<p id="notice"><%= notice %></p>

<h1>Conversations</h1>
<!-- 
Display messages that user is part of, as well as a list of users to message
-->
<% if @conversations.empty? %>
  <div>"No conversations"</div>
<% else %>  
  <% @conversations.each do |conversation| %>
    <% if (conversation.hirer == current_user) %>
      <div><%= link_to "Go to conversation with owner #{conversation.owner.profile.username}", conversation %></div>
    <% elsif (conversation.owner == current_user) %>
      <div><%= link_to "Go to conversation with hirer #{conversation.hirer.profile.username}", conversation %></div>
    <% else %>
    <% end %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Hirer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversations.each do |conversation| %>
      <tr>
        <td><%= conversation.owner %></td>
        <td><%= conversation.hirer %></td>
        <td><%= link_to 'Show', conversation %></td>
        <td><%= link_to 'Edit', edit_conversation_path(conversation) %></td>
        <td><%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conversation', new_conversation_path %>